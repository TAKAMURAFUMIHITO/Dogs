<header class="border-bottom border-dark" style="background-color: #deb887">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag 'Dogs-logo.PNG', style: "width: 70px;" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!--会員ログイン時-->
          <% if member_signed_in? %>
            <li class="nav-item">
              <%= link_to current_member_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to members_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to member_followings_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>友達
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_member_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>ログアウト
              <% end %>
            </li>
          <% else %>
            <!--会員ログアウト時-->
            <li class="nav-item">
              <%= link_to homes_about_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>Dogsって？
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_member_registration_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>新規会員登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_member_session_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>