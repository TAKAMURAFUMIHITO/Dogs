<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>会員を編集</h2>
      <%= form_with model: @member, url: admin_member_path, method: :patch, local: true do |f| %>

        <table class="table">
          <tr><%= image_tag @member.get_profile_image, size: "100x100" %></tr>
          <tr>
            <th>ニックネーム</th>
            <th colspan="2"><%= @member.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th colspan="2"><%= @member.introduction %></th>
          </tr>
        </table>

        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: 'profile_image/*' %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集する",class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>