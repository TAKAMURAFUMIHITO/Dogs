<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>投稿一覧</h2>
    </div>
  </div>
  <div class="card-deck">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <%= render "admin/posts/index", post: post %>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
</div>