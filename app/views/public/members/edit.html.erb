<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>プロフィールを編集</h2>
      <%= form_with model: @member, url: member_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %><%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %><%= f.label :profile_image %>
          <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'profile_image/*' %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %><%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>