<% if post.liked_by?(current_member) %>
  <span>
    <%= link_to post_likes_path(post), method: :delete do %>
      <i class="fas fa-heart" color="#ff0000"></i>
    <% end %>
  </span>
<% else %>
  <span>
    <%= link_to post_likes_path(post), method: :post do %>
      <i class="far fa-heart" color="#000000"></i>
    <% end %>
  </span>
<% end %>
