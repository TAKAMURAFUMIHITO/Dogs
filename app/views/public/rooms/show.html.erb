<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2><%= @another_entry.member.name %>さんとのメッセージ</h2>
    </div>
  </div>
  <div class="chat_room">
    <% @messages.each do |message| %>
      <% if message.member_id == current_member.id %>
        <div class="my_message">
          <p><%= message.message %></p>
        </div>
      <% else %>
        <div class="chat">
          <%= image_tag message.member.get_profile_image %>
          <div class="callout">
            <p><%= message.message %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="message_form">
    <%= form_with model: @message, url: messages_path, method: :post, local: true do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <%= f.submit "送信する", class: "btn btn-outline-success" %>
    <% end %>
  </div>
</div>