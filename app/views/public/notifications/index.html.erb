<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>通知</h2>
      <% if @notifications.exists? %>
        <div>
          <%= render @notifications %>
        </div>
      <% else %>
          <p>通知はありません</p>
      <% end %>
      <hr>
      <%= link_to destroy_all_path, method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <span style="color: black;">全削除</span>
      <% end %>
    </div>
  </div>
</div>
